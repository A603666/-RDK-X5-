# 渔场管理系统环境变量配置示例
# 复制此文件为 .env 并填入实际值

# Coze AI助手配置
COZE_AUTH_TOKEN=your_coze_auth_token_here
COZE_BOT_ID=your_coze_bot_id_here
COZE_USER_ID=your_user_id_here

# 高德地图API配置
AMAP_API_KEY=your_amap_api_key_here

# 数据库配置（如果使用）
# DATABASE_URL=sqlite:///fishery.db

# 系统配置
DEBUG=False
SECRET_KEY=your_secret_key_here
PORT=5000

# 水质监测配置
WATER_QUALITY_UPDATE_INTERVAL=60  # 秒
PREDICTION_MODEL=auto  # auto, lstm, statistical

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/fishery.log

# 安全配置
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
